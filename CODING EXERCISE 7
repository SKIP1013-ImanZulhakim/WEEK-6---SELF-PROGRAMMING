package selfProgramming;
import java.util.Scanner;
public class Vote {					//Input age, 
									//If age over 18 print "You are eligible to vote", if not print "You are not eligible to vote until 18 "

	public static void main(String[] args) {
		Scanner sc = new Scanner (System.in);
		
		int age;
		
		System.out.println("Enter your age : ");
		age = sc.nextInt();
		
		if (age>=18)
			System.out.println("You are eligible to vote.");
		
		else
			System.out.println("You are not eligible to vote until 18.");

	}

}
